<!-- Header -->
<% include ../layout/header-v4.ejs %>
<% if(products){ %>
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <table id="cart" class="table table-hover table-condensed fix-table">
            <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:10%">Price</th>
                    <th style="width:8%">Quantity</th>
                    <th style="width:22%" class="text-center">Subtotal</th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            <% products.forEach(function(pro){ %>
            <tbody>
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="/assets/images/<%= pro.img.img1 %>" alt="..." class="img-responsive" /></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin"><%= this.item.name %></h4>
                                <p><%= pro.des %></p>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">$<%= pro.price %></td>
                    <td data-th="Quantity">
                        <input type="number" class="form-control text-center" value="1">
                    </td>
                    <td data-th="Subtotal" class="text-center">1.99</td>
                    <td class="actions" data-th="">
                        <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
            </tbody>
            <%  }) %>
            <tfoot>
                <tr>
                    <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                    <td colspan="2" class="hidden-xs"></td>
                    <td class="hidden-xs text-center"><strong><h3>$<%= totalPrice %></h3></strong></td>
                    <td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>
<% } else { %>
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <h1>Nothing here</h1>
    </div>
</section>
<% } %>

<!-- Footer -->
<% include ../layout/footer.ejs %>