<!-- Header -->
<% include ../layout/header-v4.ejs %>
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <h1>Checkout</h1>
        <h4>Your total: $
            <%= totalPrice %>
        </h4>
        <div id="charge-error" class="alert alert-danger d-none">
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="form-group">
                <label for="name">Name: </label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                <label for="address">Address: </label>
                <input type="text" class="form-control" name="address" id="address" placeholder="address" required>
                <label for="cardname">Card holder name: </label>
                <input type="text" class="form-control" name="cardname" id="cardname" placeholder="cardname" required>
                <label for="credit">Credit card number: </label>
                <input type="text" class="form-control" name="credit" id="credit" placeholder="credit" required>
                <label for="exmonth">Expiration Month</label>
                <input type="text" class="form-control" name="exmonth" id="exmonth" placeholder="exmonth" required>
                <label for="exyear">Expiration Year</label>
                <input type="text" class="form-control" name="exyear" id="exyear" placeholder="exyear" required>
                <label for="cvc">CVC</label>
                <input type="text" class="form-control" name="cvc" id="cvc" placeholder="Name" required>
            </div>
            <input class="btn btn-success" type="submit" value="Buy Now">
        </form>
    </div>
</section>
<script src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="/assets/js/checkout.js"></script>
<!-- Footer -->
<% include ../layout/footer.ejs %>